{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "types": ["electron", "node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@echopages/shared/*": ["../../shared/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"],
  "references": [{ "path": "../shared" }]
}
